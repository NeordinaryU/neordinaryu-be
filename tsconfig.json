{
  "compilerOptions": {
    "target": "ES2020", // 좀 더 현대적인 JS로
    "module": "NodeNext", // ✅ ESM 지원
    "moduleResolution": "NodeNext", // ✅ ESM 경로 해석
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "./dist",
    "noEmit": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "files": ["src/types/express/index.d.ts"]
}
